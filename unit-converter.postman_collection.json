{
  "info": {
    "_postman_id": "your-postman-id",
    "name": "Unit Converter API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Convert Units",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/convert?category=length&fromUnit=meters&toUnit=feet&value=1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "convert"],
          "query": [
            {
              "key": "category",
              "value": "length"
            },
            {
              "key": "fromUnit",
              "value": "meters"
            },
            {
              "key": "toUnit",
              "value": "feet"
            },
            {
              "key": "value",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Get Categories",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/categories",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories"]
        }
      }
    },
    {
      "name": "Get Units for Category",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/units/length",
          "host": ["{{baseUrl}}"],
          "path": ["api", "units", "length"]
        }
      }
    },
    {
      "name": "Get Conversion Formula",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/formula?category=length&fromUnit=meters&toUnit=feet",
          "host": ["{{baseUrl}}"],
          "path": ["api", "formula"],
          "query": [
            {
              "key": "category",
              "value": "length"
            },
            {
              "key": "fromUnit",
              "value": "meters"
            },
            {
              "key": "toUnit",
              "value": "feet"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5001"
    }
  ]
} 