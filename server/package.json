{
  "name": "unit-converter-server",
  "version": "1.0.0",
  "description": "Unit converter API server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:api": "jest api.test.js --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^7.5.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
